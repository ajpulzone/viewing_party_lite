<div id="title">
  <h1><%= @movie.title %></h1>
</div>

<div id="summary">
  <h2> Summary </h2>
  <%= @movie.summary %>
</div>

<div id="vote-avg">
  <h2>Vote Average: <%= @movie.vote_avg %></h2> 
</div>

<ul>
<% @reviews.reviews.each do |review| %>
<li id="review-<%= review[:author] %>">
Author: <%= review[:author] %>
Review: <%= review[:content] %>
</li>
<% end%>
</ul>

<div id="total-review-count">
  <%= @reviews.total_review_count %> Reviews
</div>

<h2>Cast</h2>
<div id="cast-members">
  <% @cast.each do |cast_member| %>
      <%= cast_member.keys[0] %> as <%= cast_member.values[0] %>
  <% end %>
</div>

<div id="runtime">
  Runtime: <%= "#{@movie.runtime/60}hr #{@movie.runtime % 60}min" %>
</div>


