<h1><%= @movie.title %></h1>

<%= form_with url: user_movie_viewing_parties_path(@user.id, @movie.id), method: :post, local: true do |form| %>
  <%= form.number_field :duration, value: @movie.run_time, min: @movie.run_time %>
  <%= form.label "Duration of Party (minutes)" %>
  <%= form.date_field :date, data: {provide: "datepicker"}  %>
  <%= form.label :date, "Date of Party" %>
   <%= form.label :start_time, "Start Time of Party" %>
    <%= form.time_field :start_time %>
  <% @users.each do |user| %>
      <%= form.check_box :attendees, {multiple: true}, user.id, nil %>
      <%= form.label "#{user.id}", "#{user.name} (#{user.email})" %>
    <% end %><br><br>
  <%= form.submit "Create Party" %>
<% end%>

  
