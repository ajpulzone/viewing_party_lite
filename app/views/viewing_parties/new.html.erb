<h1><%= @movie.title %></h1>
<% form_with url: user_movie_viewing_parties_path(@user.id, @movie.id), method: :post, local: true do |form| %>
  <%= form.number_field :duration, value: @movie.run_time, %>
  <%= form.label "Duration of Party (minutes)" %>
  <%= form.date_field :date, data: {provide: "datepicker"}  %>
  <%= form.label :date, "Date of Party" %>

  <%= form.collection_check_boxes :attendees, User.where.not("id = #{params[:user_id]}"), :id, :name %>
  <ul><% @users.each do |user| %>
    <li id="users_<%user.id%>>
      <%= user.name %> 
  <%= form.submit "Register"%>
<% end%>
<% end%>

  
